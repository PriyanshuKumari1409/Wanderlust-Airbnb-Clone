

<% layout('/layouts/boilerplate') %>


<div class="row">
  <h2 class="col-8 offset-3"> SignUp on Wanderlust</h2>
  <div class="col-8 offset-3">
   <form action="/signup" method="POST" class="needs-validation" novalidate>


         <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input id="username" name="username" type="text"  class="form-control w-100" required>
    <div class="invalid-feedback">Please provide a username.
    </div>
  </div>



      <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input id="email" name="email" type="email"  class="form-control w-100" required>
    <div class="invalid-feedback">Please provide an email.
    </div>
  </div>



    <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input id="password" name="password" type="password"  class="form-control w-100" required>
    <div class="invalid-feedback">Please provide a password.
    </div>
  </div>

  <button class="btn btn-dark">Signup</button>

    </form>
                 </div>
             </div>

